<h2>プロモーションアップロード</h2>
<canvas id="canvas"><!-- プロモーションアップロード --></canvas>
<%= simple_form_for([:admin, @client, @promotion], :url =>{:action => :uploaded}, :html => {:multipart => true}) do |f| %>
<div id="attributes">
	<%= f.file_field :file %>
	<%= f.submit :onclick => "this.disabled=true;this.value='処理中...';this.form.submit();"%>
</div><% end %>
<div class="actions one">
	<span class="back"><%= link_to "戻る", admin_clients_path %></span>
</div>
