source 'http://rubygems.org'

gem 'rails', '>=3.0.3'

# Bundle edge Rails instead:
# gem 'rails', :git => 'git://github.com/rails/rails.git'

# Gems for Database
gem 'mysql2', "< 0.3.0"

# Web Server
gem 'thin'

# Force SSL !! NOT REQUIRED FOR RAILS 3.1
gem 'ssl_requirement'

# Gems for Test
group :development, :test do
  gem "rspec-rails", ">= 2.4"
  gem "cucumber-rails"
  gem "capybara"
  # Debug tools
  gem 'ruby-debug19'
  gem 'rails-footnotes', "~> 3.7.5.rc1"
end

# Machinist - The fixtures replacement
# https://github.com/notahat/machinist
gem "machinist", ">= 2.0.0.beta2"

# Gems for development
group :development do
  # Deploy with Capistrano
  gem 'capistrano'
  gem 'capistrano-ext'
end

# Use jquary-rails
# More info on https://github.com/rails/jquery-ujs
gem 'jquery-rails', '>= 0.2.6'

# Use device for user authentication.
# More info on https://github.com/plataformatec/devise   
gem "devise"

# Use paper_trail for undo. More info on 
# https://github.com/airblade/paper_trail
gem 'paper_trail'

# Use kaminari for pagination.
# https://github.com/amatsuda/kaminari
gem "kaminari"

# A pack of Rails generators gem plugin that generates Rails 3 and Rails 2 I18n 
# locale files for almost every known locale.
# https://github.com/amatsuda/i18n_generators
gem "i18n_generators"

# MetaWhere is a gem that sets out to right that wrong, and give tranquility to you, the Rails coder.
# http://metautonomo.us/projects/metawhere/
gem "meta_where"

# MetaSearch is extensible searching for your form_for enjoyment.
# http://metautonomo.us/projects/metasearch/
gem "meta_search"

# Forms made easy for Rails! It's tied to a simple DSL, with no opinion on markup
# https://github.com/plataformatec/simple_form
gem "simple_form"

# Gems to make rails console happy
gem "hirb-unicode"
gem "wirble"
gem "awesome_print"

# Gem help uploading files.
gem "carrierwave"
gem "mini_magick"